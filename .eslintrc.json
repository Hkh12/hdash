{
	"root": true,
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"mocha": true,
		"jasmine": true
	},
	"globals": {
		"cy": true,
		"Cypress": true
	},
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
	],
	"rules": {
		"@typescript-eslint/explicit-function-return-type": "off",
		"@typescript-eslint/no-explicit-any": "off"
	}
}
