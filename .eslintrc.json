{
	"root": true,
	"env": {
		"browser": true,
  		"es6": true,
  		"node": true,
  		"mocha": true,
		"jasmine": true
	},
	"globals": {
		"cy": true,
		"Cypress": true
	},
	"extends": "problems",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"prefer-const": "warn",
		"semi": ["error", "never"],
		"quotes": ["error", "single", {
			"allowTemplateLiterals": true
		}],
		"prefer-template": "off",
		"nonblock-statement-body-position": ["error", "beside"]
	}
}