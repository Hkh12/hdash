{
	"root": true,
    "env": {
        "browser": true,
        "es6": true,
		"node": true,
		"mocha": true,
		"jasmine": true
	},
	"globals": {
		"cy": true,
		"Cypress": true
	},
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
		"no-extra-boolean-cast": 0,
		"semi": [2, "always"],
		"arrow-spacing": [2, {
			"after": true,
			"before": true
		}],
		"no-var": 2,
		"prefer-spread": 1
	}
}